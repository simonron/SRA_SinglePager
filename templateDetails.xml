<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>SRA_SinglePager</name>
	<version>1.0</version>
	<creationDate>6/8/2013</creationDate>
	<author>Kyle Ledbetter- adapted by Simon Anthony</author>
	<authorEmail>simon@volute.co.uk</authorEmail>
	<copyright>Copyright (C) 2005 - 2016 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_SRA_SINGLEPAGER_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>banner_top_main</position>
		<position>debug</position>
		<position>top_right_col</position>
		<position>Navigation_top_main</position>
		<position>under_main_area</position>
		<position>above_main_area</position>
		<position>right_col</position>
		<position>left_col</position>
		<position>left_col_2</position>
		<position>left_col_3</position>
		<position>footer-left</position>
		<position>footer-middle</position>
		<position>footer-right</position>
		<position>subfooter</position>
		<position>hero</position>
		
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_SRA_SinglePager.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_SRA_SinglePager.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_SRA_SINGLEPAGER_COLOR_LABEL"
					description="TPL_SRA_SINGLEPAGER_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_SRA_SINGLEPAGER_BACKGROUND_COLOR_LABEL"
					description="TPL_SRA_SINGLEPAGER_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_SRA_SINGLEPAGER_LOGO_LABEL"
					description="TPL_SRA_SINGLEPAGER_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					filter="string" />

				<field name="googleFont"
					type="radio"
					class="btn-group"
					default="1"
					label="TPL_SRA_SINGLEPAGER_FONT_LABEL"
					description="TPL_SRA_SINGLEPAGER_FONT_DESC"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="googleFontName" class="" type="text" default="Open+Sans"
					label="TPL_SRA_SINGLEPAGER_FONT_NAME_LABEL"
					description="TPL_SRA_SINGLEPAGER_FONT_NAME_DESC" />

				<field name="fluidContainer"
					type="radio"
					class="btn-group"
					default="0"
					label="TPL_SRA_SINGLEPAGER_FLUID_LABEL"
					description="TPL_SRA_SINGLEPAGER_FLUID_DESC"
				>
					<option value="0">TPL_SRA_SINGLEPAGER_STATIC</option>
					<option value="1">TPL_SRA_SINGLEPAGER_FLUID</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
